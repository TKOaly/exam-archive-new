{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "esnext",
    "lib": ["es2015"],
    "target": "es5",
    "jsx": "preserve",
    "noImplicitAny": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
